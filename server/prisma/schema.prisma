// server/prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  id        String  @id
  name      String
  image_url String?
  bio       String?
  genre     String?   // 文字列で保持（リレーションにしない）
  songs     Song[]

  popularity Int     @default(0)

  @@index([name])
  @@index([genre])
}

model Song {
  id        BigInt  @id @default(autoincrement())
  artist_id String
  title     String
  track_no  Int?
  artist    Artist  @relation(fields: [artist_id], references: [id])

  @@unique([artist_id, title])
  @@index([title])
}
